[Unit]
Description=Wise Dash API
After=network-online.target
Wants=network-online.target

[Service]
WorkingDirectory=/home/pi/wise-pi/dash/app
Environment="PATH=/home/pi/wise-pi/dash/app/.venv/bin"
ExecStart=/home/pi/wise-pi/dash/app/.venv/bin/uvicorn main:app --host 0.0.0.0 --port 8000
Restart=always
User=pi

[Install]
WantedBy=multi-user.target
